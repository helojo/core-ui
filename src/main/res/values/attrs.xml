<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Theme">
        <attr name="textColorMain" format="color" />
        <attr name="textColorSubMain" format="color" />
        <attr name="textColorDisable" format="color" />
        <attr name="loadingView" format="reference" />
        <attr name="errorTip" format="reference" />
        <attr name="emptyTip" format="reference" />
        <attr name="colorAccentLight" format="color" />
        <attr name="colorAccentDark" format="color" />
    </declare-styleable>

    <declare-styleable name="Toolbar">
        <attr name="noTitle" format="boolean" />
        <attr name="overlay" format="boolean" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="subtitleTextSize" format="dimension" />
        <attr name="titleTextGravity" format="enum">
            <enum name="center" value="0x01" />
            <enum name="left" value="0x02" />
            <enum name="right" value="0x03" />
        </attr>
        <attr name="titleBackIcon" format="reference" />
        <attr name="titleMoreIcon" format="reference" />
        <attr name="titleBackground" format="reference" />
        <attr name="titleHeight" format="dimension" />
    </declare-styleable>

</resources>