<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base_animation_BottomSheetDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_sheet_slide_out</item>
    </style>

    <style name="base_light_BottomSheetDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/base_animation_BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/Widget.Design.BottomSheet.Modal</item>
    </style>

    <style name="base_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_divider</item>
    </style>

</resources>